<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="fp"
            type="edu.aku.hassannaqvi.covidimmunity.models.FP" />

                <variable
            name="callback"
            type="edu.aku.hassannaqvi.covidimmunity.ui.sections.SectionFHAActivity" />
    </data>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- fha01  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfha01"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_fha01" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/fha01" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/fha01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fha01"
                        android:text="@={fp.fha01}" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fha02  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfha02"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_fha02" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/fha02" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/fha02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fha02"
                        android:text="@={fp.fha02}" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fha09  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfha09"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_fha09" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/fha09" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/fha09"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/fha0901"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{fp.fha09.equals(`1`)}"
                            android:onClick="@{()->fp.setFha09(`1`)}"
                            android:text="@string/fha0901" />

                        <RadioButton
                            android:id="@+id/fha0902"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{fp.fha09.equals(`2`)}"
                            android:onClick="@{()->fp.setFha09(`2`)}"
                            android:text="@string/fha0902" />

                        <RadioButton
                            android:id="@+id/fha0903"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{fp.fha09.equals(`3`)}"
                            android:onClick="@{()->fp.setFha09(`3`)}"
                            android:text="@string/fha0903" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fha10  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfha10"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_fha10" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/fha10" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/fha10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fha10"
                        android:text="@={fp.fha10}" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fha11  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfha11"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_fha11" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/fha11" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/fha11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fha11"
                        android:text="@={fp.fha11}" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fha12  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfha12"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_fha12" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/fha12" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/fha12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fha12"
                        android:text="@={fp.fha12}" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fha12a  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfha12a"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_fha12a" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/fha12a" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/fha12a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fha12a"
                        android:text="@={fp.fha12a}" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- fha13  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfha13"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_fha13" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/fha13" />
                    </LinearLayout>

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fha13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fha13"
                        android:inputType="number"


                        android:text="@={fp.fha13}"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView><!--EndButton LinearLayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/redOverlay"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@color/greenOverlay"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>